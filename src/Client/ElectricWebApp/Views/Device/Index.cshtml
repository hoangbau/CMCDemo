@model ElectricWebApp.Models.DeviceViewModel
@{
    ViewData["Title"] = "Electric";
}

    <form method="post">
        <h4>Create Electric</h4>
        <hr />
        <div class="form-group">
            <label asp-for="SeriaNumber" class="col-md-2"></label>
            <div class="col-md-8">
                <input asp-for="SeriaNumber" class="form-control" />
                <span asp-validation-for="SeriaNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FirmwareVersion" class="col-md-2"></label>
            <div class="col-md-8">
                <input asp-for="FirmwareVersion" class="form-control" />
                <span asp-validation-for="FirmwareVersion" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="State" class="col-md-2"></label>
            <div class="col-md-8">
                <input asp-for="State" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Type" class="col-md-2"></label>
            <div class="col-md-8">
                <select asp-for="Type" asp-items="Model.Types" style="width:100%"></select>
            </div>
        </div>
        <div id="gateway">
            <div class="form-group">
                <label asp-for="IP" class="col-md-2"></label>
                <div class="col-md-8">
                    <input asp-for="IP" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Port" class="col-md-2"></label>
                <div class="col-md-8">
                    <input asp-for="Port" class="form-control" />
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <button asp-controller="Home" asp-action="Index" class="btn-info" style="margin-right:10px">Cancel</button>
            <button asp-controller="Device" asp-action="Create" class="btn-primary">Submit</button>
        </div>
        
        @section scripts {
            <script>
                $('#gateway').hide();
                $("#Type").on("change", function () {
                    var selected = $(this).val();
                    if (selected != 2) {
                        $('#gateway').hide();
                    } else {
                        $('#gateway').show();
                    }
                });
            </script>
        }
    </form>